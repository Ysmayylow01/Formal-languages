<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/baccolor"
    tools:context=".InfoActivity">

    <include
        layout="@layout/mytoolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="30dp"
        android:src="@drawable/oguz"/>


    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/shimmerTv1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center|top"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/mitr_regular"
        android:text="@string/splash"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="26dp"
        android:textStyle="bold"
        app:reflectionColor="#E5F1F0" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/aboutapp"
        android:layout_gravity="center"
        android:fontFamily="@font/cherry_cream_soda"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="14dp"
        android:textColor="@color/textColor"/>



    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/shimmerTv2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center|bottom"
        android:fontFamily="@font/mitr_regular"
        android:text="Developed By : Nuryyeva Merjen"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:textColor="@color/textColor"
        android:textSize="16dp"
        app:reflectionColor="#E5F1F0" />

</FrameLayout>

</FrameLayout>